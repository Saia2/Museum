<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.masaia.andriod.museum">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".InfoActivity"
            android:label="@string/title_activity_info"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".FeaturesActivity"
            android:label="@string/title_activity_features"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".TicketActivity"
            android:label="@string/title_activity_ticket"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".PlantActivity"
            android:label="@string/title_activity_plant"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".AnimalActivity"
            android:label="@string/title_activity_animal"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".CategoryItem"
            android:label="@string/title_activity_category_item"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>